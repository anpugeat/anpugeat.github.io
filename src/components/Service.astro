---
import { siteConfig } from "../config";
const hasService = siteConfig.roles && siteConfig.roles.length > 0;

---

{
  hasService && (
    <section id="service" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
         <div class="lg:col-span-4">
           <h2
              class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900"
            >
              Service
            </h2>
           <div
             class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
           >
           </div>
         </div>

         <div class="lg:col-span-8 space-y-12">
           <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-600" style="white-space: pre-line;">
             {siteConfig.service}
            </p>
              
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {siteConfig.roles.map((job) => (
                  <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300">
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                      <div class="flex items-start gap-3">
                        {/* Company logo */}
                        <div class="flex-shrink-0">
                         <img 
                           src={job.logo || "/favicon.png"} 
                           alt={`${job.company} logo`}
                           class="w-13 h-13 object-contain rounded-md"
                          />
                        </div>
                         {/* Company info */}
                        <div class="flex-1">
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 ml-1">
                            {job.company}
                         </h3>
                         <p
                           class="text-base sm:text-lg -mt-1 ml-1"
                           style={`color: ${siteConfig.accentColor}`}
                         >
                          {job.position}
                         </p>
                       </div>
                      </div>

                      <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                        {job.dateRange}
                      </span>
                    </div>
        
                    <p class="space-y-2">
                      {job.description}
                    </p>
        

                  </div>
                ))}
              </div>
            </div>
          
        
        
      </div>
    </div>
  </div>
</section>
)
}
